<section class="min-h-screen flex items-center justify-center bg-linear-to-b from-[#3a1f00] via-[#7b3f00] to-[#fff7d6] text-white">
  <div class="max-w-4xl mx-auto px-6 text-center">

    <!-- Título principal -->
    <h1 class="hero-title text-5xl md:text-6xl font-extrabold mb-6 text-yellow-200 leading-tight">
      Vive la Magia de los Eventos
    </h1>

    <!-- Subtítulo -->
    <p class="hero-text text-lg md:text-xl mb-10 text-yellow-100">
      Descubre experiencias únicas y productos exclusivos en una plataforma
      diseñada para sorprenderte.
    </p>

    <!-- CTA -->
    <a
      href="#destacados"
      class="inline-block bg-yellow-500 hover:bg-yellow-400
             text-[#3a1f00] font-bold px-8 py-4 rounded-xl
             shadow-lg transition-transform duration-300 hover:scale-105"
    >
      Explorar ahora
    </a>

  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".hero-title", {
    scrollTrigger: {
      trigger: ".hero-title",
      start: "top 80%",
    },
    y: 80,
    opacity: 0,
    stagger: 0.15,
    duration: 1,
    ease: "power4.out",
  });

  gsap.from(".hero-text", {
    scrollTrigger: {
      trigger: ".hero-text",
      start: "top 85%",
    },
    x: -60,
    opacity: 0,
    duration: 1,
    delay: 0.2,
    ease: "power3.out",
  });
</script>