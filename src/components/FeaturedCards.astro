---
const destacados = [
  {
    titulo: "Festival Mágico",
    descripcion: "Un evento único lleno de sorpresas y experiencias inolvidables.",
  },
  {
    titulo: "Merchandising Exclusivo",
    descripcion: "Productos oficiales disponibles por tiempo limitado.",
  },
  {
    titulo: "Eventos Especiales",
    descripcion: "Acceso anticipado a experiencias premium.",
  },
];
---
<section id="destacados" class="bg-white py-20">
  <div class="max-w-6xl mx-auto px-6">

    <h2 class="text-4xl font-extrabold text-center text-yellow-700 mb-16">
      Destacados
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">

      {destacados.map(item => (
        <div class="
          bg-[#fff7d6]
          p-6
          rounded-xl
          shadow-lg
          border border-yellow-200
          text-center
          transition-all duration-300
          hover:-translate-y-2
          hover:shadow-2xl
        ">
          <h3 class="text-2xl font-bold text-yellow-700 mb-4">
            {item.titulo}
          </h3>
          <p class="text-gray-700">
            {item.descripcion}
          </p>
        </div>
      ))}

    </div>
  </div>
</section>